<h1>🦸‍♂️ Dashboard de Superhéroes</h1>

<% if (!superheroes || superheroes.length === 0) { %>
<p>No hay superhéroes registrados</p>
<% } else { %>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Nombre Real</th>
      <th>Edad</th>
      <th>Planeta</th>
      <th>Poderes</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% superheroes.forEach(h => { %>
    <tr>
      <td><%= h.Nombre || 'N/A' %></td>
      <td><%= h['Nombre Real'] || 'N/A' %></td>
      <td><%= h.Edad || 'N/A' %></td>
      <td><%= h['planeta de Origen'] || 'N/A' %></td>
      <td><%= Array.isArray(h.Poderes) ? h.Poderes.join(', ') : 'N/A' %></td>
      <td>
        <a href="/api/heroes/<%= h._id %>/editar">
          <button>Editar</button>
        </a>
        <form
          action="/api/heroes/<%= h._id %>?_method=DELETE"
          method="POST"
          onsubmit="return confirm('¿Seguro que querés eliminar este superhéroe?');"
        >
          <button type="submit" style="background-color: red; color: white">
            Eliminar
          </button>
        </form>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
<% } %>
